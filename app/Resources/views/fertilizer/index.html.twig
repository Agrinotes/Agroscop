{% extends 'base.html.twig' %}

{% block head_javascripts %}
    {{ parent() }}
    <link id="skinStyle" href="{{ asset('front/mmenu/assets/skins/teal.css') }}" rel="stylesheet" type="text/css">
{% endblock %}


{% block page %}
    <div class="page animsition">
        <div class="page-content">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">Liste des engrais et amendements

                    </h3>

                </div>
                <div class="panel-body">
                    <p>
                        Cette liste est donnée à titre indicative et n'a pas vocation à être exhaustive (pour le moment).
                    </p>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-primary" href="{{ path('fertilizer_new') }}">Ajouter un engrais ou amendement</a>
                    {% endif %}
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>N</th>
                            <th>P</th>
                            <th>K</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for fertilizer in fertilizers %}
                            <tr>
                                <td><a href="{{ path('fertilizer_show', { 'id': fertilizer.id }) }}">{{ fertilizer.name | capitalize }}</a></td>
                                <td>{{ fertilizer.n }}</td>
                                <td>{{ fertilizer.p2O5 }}</td>
                                <td>{{ fertilizer.k2O }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}