{% extends 'base.html.twig' %}

{% block body %}
    <h1>Substance</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ substance.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ substance.amount }}</td>
            </tr>
            <tr>
                <th>Fullunit</th>
                <td>{{ substance.fullUnit }}</td>
            </tr>
            <tr>
                <th>Unit1</th>
                <td>{{ substance.unit1 }}</td>
            </tr>
            <tr>
                <th>Unit2</th>
                <td>{{ substance.unit2 }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ substance.name }}</td>
            </tr>
            <tr>
                <th>Cas</th>
                <td>{{ substance.cAS }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('substance_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('substance_edit', { 'id': substance.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
