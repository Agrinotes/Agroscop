    <script>
        var i = 0;
        function switchPanels() {
            if (i % 2 == 0) {
                $('#stock').hide();
                $('#chart').hide();

                $('#updateStock').fadeIn(400);
                if (i == 0) {
                    $('.select2').select2();
                    $('.date').datepicker({
                        'format': 'mm/yyyy',
                        'startView': 'decade',
                        'minViewMode': 'months',
                        'language': 'fr',
                        'orientation': 'bottom',
                        'autoclose': true
                    });

                }
            } else {
                $('#updateStock').hide();
                $('#stock').fadeIn(400);
                $('#chart').fadeIn(400);

            }
            i++;
        }
        ;
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#togglePrice').hide();

            $('#farm_speciality_mvt_update_stock_category').on('change', function () {
                if ($("#farm_speciality_mvt_update_stock_category").select2('data')[0]['text'] == "Achat") {
                    $('#togglePrice').show("slow");
                } else {
                    $('#togglePrice').hide("slow");
                }
            })
        });
    </script>

    <script>
        $(function () {
            Highcharts.stockChart('container1', {
                rangeSelector: {
                    inputDateFormat:'%e %B %Y',
                    inputEditDateFormat:'%d/%m/%Y',
                    inputBoxWidth: 110,
                    selected: 5,
                    buttons: [{
                        type: 'month',
                        count: 1,
                        text: '1m'
                    }, {
                        type: 'month',
                        count: 3,
                        text: '3m'
                    }, {
                        type: 'month',
                        count: 6,
