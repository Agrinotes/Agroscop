                                </td>
                                <td>
                                    {{ farmSpecialityMvt.datetime|date('d/m/Y') }}
                                </td>
                                <td>
                                    {% if farmSpecialityMvt.category.slug == "useAction" or farmSpecialityMvt.amount < 0 %}-{% endif %}
