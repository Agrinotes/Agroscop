{% extends 'base.html.twig' %}

{% block head_javascripts %}
    {{ parent() }}
    <link id="skinStyle" href="{{ asset('front/mmenu/assets/skins/teal.css') }}" rel="stylesheet" type="text/css">
{% endblock %}


{% block plugin_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('front/global/vendor/select2/select2.css') }}">
{% endblock %}

{% block page %}
    <div class="page animsition">
        <div class="page-header padding-top-20 padding-bottom-10">
            <ol class="breadcrumb">
                <li><a href="{{ path('farmspeciality_index') }}">Stock d'engrais et amendements</a></li>
                <li class="active">Ajouter un engrais ou amendement</li>
            </ol>
        </div>
        <div class="page-content">
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3">
                    <div class="panel panel-bordered">
                        <div class="panel-heading">
                            <h3 class="panel-title">Ajouter un engrais ou amendement</h3>
                        </div>
                        <div class="panel-body">
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col-lg-12">
                                    <h4 class="example-title">
                                        {{ form_label(form.fertilizer) }}
                                    </h4>
                                    {{ form_widget(form.fertilizer) }}
                                    {{ form_errors(form.fertilizer) }}
                                </div>
                            </div>
                            <a class="pull-right margin-top-10" href="{{ path('fertilizer_new') }}"><i class="icon md-help-outline"
                                                                                           aria-hidden="true"></i> Que
                                faire si mon engrais ou amendement n'est pas dans la liste d√©roulante</a>
                        </div>
                        <div class="panel-footer">
                            <a class="btn btn-default"
                               href="{{ path('farmfertilizer_index') }}">Annuler</a>
                            <button class="btn btn-primary margin-left-10" type="submit">Enregistrer</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block template_config %}
    {{ parent() }}
    <script src="{{ asset('front/global/vendor/select2/select2.min.js') }}"></script>
    <script src="{{ asset('front/global/js/components/select2.js') }}"></script>
{% endblock %}



