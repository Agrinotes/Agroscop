{% extends 'base.html.twig' %}

{% block body %}
    <h1>UnitCategory list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for unitCategory in unitCategories %}
            <tr>
                <td><a href="{{ path('unitcategory_show', { 'id': unitCategory.id }) }}">{{ unitCategory.id }}</a></td>
                <td>{{ unitCategory.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('unitcategory_show', { 'id': unitCategory.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('unitcategory_edit', { 'id': unitCategory.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('unitcategory_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
