{% extends 'base.html.twig' %}

{% block body %}
    <h1>HarvestProduct</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ harvestProduct.id }}</td>
            </tr>
            <tr>
                <th>Qty</th>
                <td>{{ harvestProduct.qty }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ harvestProduct.price }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ harvestProduct.comment }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('harvestproduct_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('harvestproduct_edit', { 'id': harvestProduct.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
