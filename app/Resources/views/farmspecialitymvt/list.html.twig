    <table class="table table-hover">
        <tbody>
        {% for farmSpecialityMvt in farmSpecialityMvts %}
                <tr>

                    <td>
                        <a href="{{ path('farmspecialitymvt_show', { 'id': farmSpecialityMvt.id }) }}">{{ farmSpecialityMvt.category.name }} le
                        {% if farmSpecialityMvt.datetime %} {{ farmSpecialityMvt.datetime|date('d/m/Y') }}{% endif %}</a>
                    </td>
                    <td>
                        {{ farmSpecialityMvt.amount |number_format(1,',',' ') }} {{ farmSpecialityMvt.unit.symbol }}

                    </td>
                    <td>
                        {% if farmSpecialityMvt.price != 0 %}
                        {{ farmSpecialityMvt.price |number_format(0,',',' ') }} CFP
                        {% endif %}
                    </td>
                </tr>
        {% endfor %}
        </tbody>
    </table>



