<div class="modal-content" xmlns="http://www.w3.org/1999/html">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
        </button>
        <h4 class="modal-title">Ajuster le stock</h4>
    </div>
    <div class="modal-body">
        {{ form_start(modal_form, {'action': path('farmspecialitymvt_new', { 'id': farmSpeciality.id })}) }}
        <div class="form-group">

        {{ form_label(modal_form.category) }}
        {{ form_errors(modal_form.category) }}

        {{ form_widget(modal_form.category) }}
        </div>

        <div class="form-group">
            {{ form_label(modal_form.amount) }}
            {{ form_errors(modal_form.amount) }}
            <div class="input-group">

                {{ form_widget(modal_form.amount) }}
                <span class="input-group-addon"></span>
                {{ form_widget(modal_form.unit) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(modal_form.pricePerUnit) }}
            {{ form_errors(modal_form.pricePerUnit) }}
            <div class="input-group">

                {{ form_widget(modal_form.pricePerUnit) }}
                <span class="input-group-addon">CFP</span>
            </div>
        </div>

        {{ form_widget(modal_form) }}
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default btn-pure margin-0 waves-effect waves-classic" data-dismiss="modal">
            Annuler
        </button>
        <button type="submit" class="btn btn-info waves-effect waves-light">
            Enregistrer
        </button>
        {{ form_end(modal_form) }}

    </div>
</div>