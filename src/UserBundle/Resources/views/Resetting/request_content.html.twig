{% trans_default_domain 'FOSUserBundle' %}

{% if invalid_username is defined %}
    <div class="alert alert-danger">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</div>
{% endif %}
<form method="post" action="{{ path('fos_user_resetting_send_email') }}" role="form" autocomplete="off">
    <div class="form-group form-material floating">
        <input type="email" class="form-control empty" id="username" name="username">
        <label class="floating-label" for="inputEmail">Votre Email</label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-danger btn-block waves-effect waves-light">
            Obtenir un nouveau mot de passe
        </button>
    </div>
</form>
<a class="btn btn-default btn-flat" href="{{ path('fos_user_security_login') }}">Annuler</a>
