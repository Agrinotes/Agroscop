{% trans_default_domain 'FOSUserBundle' %}

{% if not form.vars.valid %}
    <div class="alert dark alert-alt alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        {{ form_errors(form) }}
    </div>
{% endif %}

<form action="{{ path("fos_user_registration_register") }}" method="post" autocomplete="off">

    {{ form_widget(form._token) }}

    <div class="form-group form-material floating" data-plugin="formMaterial">
        <input type="text" class="form-control empty" id="fos_user_registration_form_firstName" name="fos_user_registration_form[firstName]">
        <label class="floating-label" for="fos_user_registration_form_firstName">Prénom</label>
    </div>

    <div class="form-group form-material floating" data-plugin="formMaterial">
        <input type="text" class="form-control empty" id="fos_user_registration_form_lastName" name="fos_user_registration_form[lastName]">
        <label class="floating-label" for="fos_user_registration_form_lastName">Nom</label>
    </div>

    <div class="form-group form-material floating" data-plugin="formMaterial">
        <input type="email" class="form-control empty" id="fos_user_registration_form_email" name="fos_user_registration_form[email]">
        <label class="floating-label" for="fos_user_registration_form_email">Email</label>
    </div>

    <div class="form-group form-material floating" data-plugin="formMaterial">
        <input type="password" class="form-control empty" id="fos_user_registration_form_plainPassword" name="fos_user_registration_form[plainPassword]">
        <label class="floating-label" for="fos_user_registration_form_plainPassword">Mot de passe</label>
    </div>

    <button type="submit" class="btn btn-primary btn-block" type="submit"
            id="_submit" name="_submit">Connexion
    </button>

</form>
