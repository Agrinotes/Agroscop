{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ action.name }}</h1>

    <table class="table table-hover">
        <thead>
        <tr>
            <th>Périodes</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        {% for period in action.periods %}
            <tr>
                <td>{{ period.startDateTime |date('d/m/Y') }} au {{ period.endDateTime |date('d/m/Y') }}</td>
                <td><span class="label label-info">{{ period.getStatus }}</span>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cropcycle_show', { 'id': action.cropCycle.id }) }}">Retour à liste des interventions</a>
        </li>
        {% if is_granted('EDIT', action) or is_granted('ROLE_ADMIN') %}
            <li>
                <a href="{{ path('action_edit', { 'id': action.id }) }}">Editer</a>
            </li>
        {% endif %}

        {% if is_granted('DELETE', action) or is_granted('ROLE_ADMIN') %}
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
                {{ form_end(delete_form) }}
            </li>
        {% endif %}
    </ul>
{% endblock %}
