    <script>
        var i = 0;
        function switchPanels() {
            if (i % 2 == 0) {
                $('#tableTools').hide();
                $('#ph-ec-chart').hide();
                $('#addAction').fadeIn(400);
                if (i == 0) {
                    $('.select2').select2();
                    $('.select2-keep').select2({closeOnSelect: false});
                }
            } else {
                $('#addAction').hide();
                $('#tableTools').fadeIn(400);
                $('#ph-ec-chart').fadeIn(400);

            }
            i++;
        }
        ;

        $(".rotate").click(function () {
            $(this).toggleClass("down");
        });
    </script>
