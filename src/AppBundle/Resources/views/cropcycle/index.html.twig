    <tbody>
    {% for cropCycle in cropCycles %}
        {% if is_granted('VIEW', cropCycle) or is_granted('ROLE_ADMIN') %}
            {% if cropCycle.actions is empty %}
                <tr>
                    <td><a href="{{ path('cropcycle_show', { 'id': cropCycle.id }) }}">{{ cropCycle.name }}</a></td>
                    <td>Pas encore d'interventions</td>
                </tr>

            {% elseif (startCampaignDate < cropCycle.startDatetime and endCampaignDate > cropCycle.startDatetime ) or (startCampaignDate < cropCycle.endDatetime and endCampaignDate > cropCycle.endDatetime) %}
                <tr>
                    <td><a href="{{ path('cropcycle_show', { 'id': cropCycle.id }) }}">{{ cropCycle.name }}</a></td>
                    <td>{{ cropCycle.startDatetime|date('F Y') }}</td>
                </tr>
            {% endif %}
        {% endif %}
    {% endfor %}
