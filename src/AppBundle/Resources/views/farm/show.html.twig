                                            <li>
                                                <a href="#" class="icon md-account blue-grey-400"></a>
                                            </li>
                                            <li>
                                                <a href="#" class="icon md-comment blue-grey-400">
                                                    <span class="badge up badge-success">1</span>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#" class="icon md-tag blue-grey-400"></a>
                                            </li>
                                            <li>
                                                <a href="#" class="icon md-share blue-grey-400"></a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="list-group-item col-xlg-6 col-lg-12 friend-info" data-friend-id="f_2">
                                <div class="widget widget-shadow">
                                    <div class="widget-content text-center bg-white padding-20">
                                        <a href="#" class="avatar margin-bottom-5">
                                            <img class="img-responsive" src="../../../../global/portraits/2.jpg" alt="Fanny_photo"
                                            />
                                        </a>
                                        <div class="friend-name">Fanny</div>
                                        <div class="friend-title margin-bottom-20 blue-grey-400">
                                            Hi~ I&#x27;m Fanny.
                                        </div>
                                        <ul class="list-inline font-size-17 margin-bottom-5">
                                            <li>
                                                <a href="#" class="icon md-account blue-grey-400"></a>
                                            </li>
                                            <li>
                                                <a href="#" class="icon md-comment blue-grey-400">
                                                    <span class="badge up badge-success"></span>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#" class="icon md-tag blue-grey-400"></a>
                                            </li>
                                            <li>
                                                <a href="#" class="icon md-share blue-grey-400"></a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="list-group-item col-xlg-6 col-lg-12 friend-info" data-friend-id="f_3">
                                <div class="widget widget-shadow">
                                    <div class="widget-content text-center bg-white padding-20">
                                        <a href="#" class="avatar margin-bottom-5">
                                            <img class="img-responsive" src="../../../../global/portraits/9.jpg" alt="Allen_photo"
                                            />
                                        </a>
                                        <div class="friend-name">Allen</div>
                                        <div class="friend-title margin-bottom-20 blue-grey-400">
                                            Hi~ I&#x27;m Allen.
                                        </div>
                                        <ul class="list-inline font-size-17 margin-bottom-5">
                                            <li>
                                                <a href="#" class="icon md-account blue-grey-400"></a>
                                            </li>
                                            <li>
                                                <a href="#" class="icon md-comment blue-grey-400">
                                                    <span class="badge up badge-success">4</span>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#" class="icon md-tag blue-grey-400"></a>
                                            </li>
                                            <li>
                                                <a href="#" class="icon md-share blue-grey-400"></a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Firends List -->
        </div>
    </div>
    <!-- End Firends Sidebar -->
    <div class="page-main">
        <div id="map">
        </div>
    </div>

    {# block body
    <h1>{{ farm.name }}</h1>

    <ul>
        {% if is_granted('EDIT',farm) or is_granted('ROLE_ADMIN') %}
            <li>
                <a class="btn" href="{{ path('farm_edit', { 'id': farm.id }) }}">Editer</a>
            </li>
        {% endif %}
        {% if is_granted('DELETE', farm) or is_granted('ROLE_ADMIN') %}
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
                {{ form_end(delete_form) }}
            </li>
        {% endif %}
    </ul>

    {{ render(controller('AppBundle:Plot:index')) }}

endblock #}
{% endblock %}

{% block core_plugin %}
    {{ parent() }}
    <script src="{{ asset('front/global/vendor/mapbox.js/mapbox.js') }}"></script>
    <script src="{{ asset('front/global/vendor/mapbox.js/plugins/leaflet.markercluster.js') }}"></script>
{% endblock %}

{% block template_config %}
    {{ parent() }}
    <script src="{{ asset('front/mmenu/assets/js/app.js') }}"></script>
    <script src="{{ asset('front/mmenu/assets/examples/js/apps/location.js') }}"></script>
{% endblock %}