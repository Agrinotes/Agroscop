{% extends 'base.html.twig' %}

{% block head_javascripts %}
    {{ parent() }}
    <link id="skinStyle" href="{{ asset('front/mmenu/assets/skins/teal.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block plugin_stylesheets %}
    {{ parent() }}
    <link href='https://api.mapbox.com/mapbox.js/v2.4.0/mapbox.css' rel='stylesheet'
          xmlns="http://www.w3.org/1999/html"/>
{% endblock %}

{% block page %}
    <div class="page animsition">
        <div class="page-header padding-top-20 padding-bottom-10">
            <ol class="breadcrumb">
                <li><a href="{{ path('farm_show_current') }}">Parcelles</a></li>
                <li class="active">{{ plot.name }}</li>
            </ol>
        </div>
        <div class="page-content">
            <div class="row">
                <div class="col-lg-9">
                    {% for flash_message in app.session.flashBag.get('success') %}
                        <div class="alert dark alert-alt alert-success alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                            {{ flash_message.title }}
                            <a href="{{ path('plot_new') }}" style="margin-left:10px;text-decoration: underline">
                                {{ flash_message.message }}

                            </a>
                        </div>
                    {% endfor %}
                    <div class="panel">
                        <div class="panel-heading">
                            <h3 class="panel-title">{{ plot.name }} </h3>

                            <div class="panel-actions">

                            </div>
                        </div>

                        <div class="panel-body">
                            <!-- Example Tabs Line -->
                            <div class="example-wrap margin-lg-0">
                                <div class="nav-tabs-horizontal">
                                    <ul class="nav nav-tabs nav-tabs-line" data-plugin="nav-tabs" role="tablist">
                                        <li class="active" role="presentation"><a data-toggle="tab"
                                                                                  href="#exampleTabsLineOne"
                                                                                  aria-controls="exampleTabsLineOne"
                                                                                  role="tab" style="font-size: 16px;">Cycles
                                                de culture</a></li>
                                        <li role="presentation"><a data-toggle="tab" href="#exampleTabsLineTwo"
                                                                   aria-controls="exampleTabsLineTwo"
                                                                   role="tab" style="font-size: 16px;">Interventions récentes</a></li>


                                    </ul>
                                    </li>
                                    </ul>
                                    <div class="tab-content">
                                        <div class="tab-pane active" id="exampleTabsLineOne" role="tabpanel">
                                            {% if plot.cropCycles is empty %}
                                                <p class="margin-top-20">
                                                    Aucune culture enregistrée.
                                                </p>
                                            {% else %}
                                            {{ render(controller('AppBundle:CropCycle:index',{'id': plot.id,'year':year} )) }}
                                            {% endif %}
                                            <a class="btn btn-primary"
                                               href="{{ path('cropcycle_new', { 'id': plot.id }) }}">
                                                Ajouter une culture
                                            </a>
                                        </div>
                                        <div class="tab-pane" id="exampleTabsLineTwo" role="tabpanel">
                                            <table class="table table-hover">
                                                <tbody>
                                                {% for cycle in plot.cropCycles %}
                                                    {% for action in cycle.actions %}
                                                        {% for period in action.periods %}
                                                            <tr>
                                                                <td>
                                                                    <div class="content">
                                                                        <div class="title">
                                                                            <a href="{{ path('action_show', { 'id': action.id }) }}">{{ action.name }}</a>
                                                                        </div>
                                                                        <div class="metas">
                                                                            <span class="started">{{ action.cropCycle.name }}
                                                                                le {{ period.startDateTime | date ('d/m/Y') }}</span>
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                </td>
                                                            </tr>
                                                        {% endfor %}

                                                    {% endfor %}

                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>


                                    </div>
                                </div>
                            </div>
                            <!-- End Example Tabs Line With JS -->


                        </div>

                    </div>
                </div>

                <div class="col-lg-3">
                    <div class="panel">
                        <div class="panel-heading">
                            <h3 class="panel-title">Campagne</h3>

                            <div class="panel-actions">

                            </div>
                        </div>

                        <div class="panel-body">
                            <div class="btn-group" aria-label="Basic example" role="group">
                                <a type="button" href="{{ path('plot_show',{'id':plot.id,'year':year-1}) }}"
                                   class="btn btn-default waves-effect waves-light"><i
                                            class="icon md-chevron-left margin-0" aria-hidden="true"></i></a>
                                <a type="button" href="#"
                                   class="btn btn-default waves-effect waves-light">{{ year }}</a>
                                <a type="button" href="{{ path('plot_show',{'id':plot.id,'year':year+1}) }}"
                                   class="btn btn-default waves-effect waves-light"><i
                                            class="icon md-chevron-right margin-0" aria-hidden="true"></i></a>
                            </div>
                        </div>

                    </div>
                    <div class="panel">
                        <div class="panel-body padding-top-0 padding-left-0 padding-right-0">
                            <div>
                                <img src="" class="img-responsive" id="plot_map"/>
                            </div>
                            <div class="" style="width: 100%;">                            {% if is_granted('EDIT', plot) or is_granted('ROLE_ADMIN') %}
                                    <a class="btn btn-raised btn-icon btn-danger btn-round waves-effect waves-round waves-light"
                                       href="{{ path('plot_edit', {'id': plot.id }) }}" id="edit_plot_button"
                                       type="button" style="position: absolute; top: 10px; right:10px;">
                                        <i class="icon md-edit" aria-hidden="true"></i>
                                    </a>
                                {% endif %}</div>

                            <div class="row padding-top-15 padding-right-15 padding-left-15">
                                <div class="col-lg-12">
                                    <span class="example-title">Surface

                                    </span>
                                                                            <span class="padding-left-20">{{ plot.area }}
                                                                                ha</span>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block core_plugin %}
    {{ parent() }}
    <script src="{{ asset('front/global/vendor/mapbox.js/mapbox.js') }}"></script>
    <script src='https://api.mapbox.com/mapbox.js/plugins/geo-viewport/v0.1.1/geo-viewport.js'></script>
    <script src='https://api.mapbox.com/mapbox.js/plugins/geojson-extent/v0.0.1/geojson-extent.js'></script>
{% endblock %}

{% block template_config %}
    {{ parent() }}

    <script src="{{ asset('front/global/js/plugins/responsive-tabs.js') }}"></script>
    <script src="{{ asset('front/global/js/plugins/closeable-tabs.js') }}"></script>

    <script>
        window.AppPlotNew = Site.extend({
            createMap: function () {
                // Mapbox access token
                L.mapbox.accessToken = 'pk.eyJ1IjoiaHVnb2xlaG91eCIsImEiOiItOHl6Sm5jIn0.12l_k0K_Z28UE-Jc0kDgpw';

                // Create the map

                var layerGroup = L.featureGroup();
                var layer = L.geoJson({{ plot.latLngs | raw }});
                layer.setStyle({color: "white", opacity: 0.8, weight: 1.5});
                layerGroup.addLayer(layer);
                var bounds = layerGroup.getBounds();
                bounds = new L.latLngBounds(bounds);
                // The size of the desired map.
                var size = [600, 600];

                bounds = bounds.toBBoxString().split(',').map(Number);

                // Calculate a zoom level and centerpoint for this map.
                var vp = geoViewport.viewport(bounds, size);

                $("#plot_map").attr("src", 'https://api.mapbox.com/v4/mapbox.streets/geojson({{ plot.latLngs| url_encode }})/' +
                        vp.center.join(',') + ',' +
                        vp.zoom + '/' +
                        size.join('x') + '@2x.png' +
                        '?access_token=' + L.mapbox.accessToken);
            }
            ,
            run: function () {
                this.createMap();
            }
        });

        $(document).ready(function ($) {
            AppPlotNew.run();
        })
    </script>

{% endblock %}


