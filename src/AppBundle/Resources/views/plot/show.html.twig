{% extends 'base.html.twig' %}

{% block body %}
    <h1>Plot</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plot.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ plot.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('plot_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('plot_edit', { 'id': plot.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
